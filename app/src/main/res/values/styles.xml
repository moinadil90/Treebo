<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PopupMenu" parent="android:Widget.Holo.Light.PopupMenu">


    </style>


    <!--Button Style -->
    <style name="Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textSize">@dimen/bottom_button_text</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">@dimen/bottom_button_text</item>
        <item name="android:background">@drawable/background</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">

        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:textSize">@dimen/navigation_header_text</item>
        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/colorBlack</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFCC00</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:gravity">bottom</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@color/colorBlack</item>
    </style>



    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/edit_text_hint</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/colorBlack</item>
    </style>


</resources>
